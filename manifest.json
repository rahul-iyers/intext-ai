{
  "manifest_version": 3,
  "name": "Intext AI",
  "version": "1.1",
  "description": "Highlight text and get AI-powered answers based on full webpage context.",
  "permissions": ["scripting", "activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["config.js","content.js"]
    }
  ],
  "action": {
    "default_title": "Intext AI"
  }
}
